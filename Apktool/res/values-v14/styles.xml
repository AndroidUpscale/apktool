<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
	<style name="TwActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/tw_ab_transparent_dark_holo</item>
	</style>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--API 14 theme customizations can go here.-->
		<item name="android:windowBackground">@drawable/background_holo_blue</item>
		<item name="android:actionBarStyle">@style/TwActionBar</item>
    </style>
	<style name="AppBaseThemeDeviceDefault" parent="android:Theme.DeviceDefault.Light">
		<item name="android:windowBackground">@drawable/background_holo_blue</item>
		<item name="android:actionBarStyle">@style/TwActionBar</item>
	</style>
</resources>
